@model weatherlogr.Core.DTO.StationCollectorRow[]
@{
    ViewData["Title"] = "Chart Temperatures";
}
@section Scripts
    {
    @* <script src="/lib/chartjs-4.2.1/dist/chart.js" type="module"></script> *@

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <environment include="Development">
        <script src="/js/date-common.js" asp-append-version="true"></script>
        <script src="/js/chartTemps.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="/js/date-common-min.js"></script>
        <script src="/js/chartTemps-min.js"></script>
    </environment>
}
<div class="row">
    <div class="col">
        <label for="station" class="form-label">Station</label>
        <select id="station" class="form-control w-300">
            @foreach (var item in Model)
            {
                <option value="@item.StationIdentifier">@item.StationName (@item.StationIdentifier)</option>
            }
        </select>
    </div>
    <div class="col">
        <label for="startDate" class="form-label">Start Date:</label>
        <input type="date" id="startDate" class="form-control w-300" />
    </div>
    <div class="col">
        <label for="endDate" class="form-label">End Date:</label>
        <input type="date" id="endDate" class="form-control w-300" />
    </div>
</div>

<div>
    <canvas id="TempChart"></canvas>
</div>

